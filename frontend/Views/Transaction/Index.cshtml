    <div class="modal-dialog" role="document" style="width:auto">
        <div class="modal-content">
            <div class="modal-header">
                <h4 id="modalDocumentPendingSignatureTitle" class="modal-title text-center"></h4>
            </div>
            <div class="modal-body">
                <div style="overflow-x:auto;">
                    <table class="table text-center" style="margin-bottom: 0px;">
                        <thead>
                            <tr>
                                <td>Tipo de Documento</td>
                                <td>Nombre del Documento</td>
                                <td>Firmante</td>
                                <td>Estado "Firma On Line"</td>
                                <td>Fecha "Firma On Line"</td>
                                <td>Usuario "Firma On Line"</td>
                                <td>Estado "Firma Presencial"</td>
                                <td>Fecha "Firma Presencial"</td>
                                <td>Usuario "Firma Presencial"</td>
                            </tr>
                        </thead>
