@model IEnumerable<CustomerAccess.Model.Policies.Policies>

@{
    ViewBag.Title = "Pólizas";
}
<link href="~/Content/Views/policies.css" rel="stylesheet">
<script src="~/Scripts/Views/policies.js" type="text/javascript"></script>
<script src="~/Scripts/Views/policy-reports.js" type="text/javascript"></script>
<div class="container">
    <div class="panel panel-default">
        <div class="panel-body">
            <!-- Split button -->        
            <div class="row">
                <div class="well carousel-search hidden-sm">
                    <div class="btn-group">
                        <select id="filterpolicies" class="btn btn-default dropdown-toggle form-control">
                            <option value="Activa" selected="selected">Pólizas activas</option>
                            <option value="Inactiva">Pólizas inactivas</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="row">
                <div id="loading-modal"></div>
                <div id="polizas"></div>
            </div>
            <div class="row">
                <br />
                <br />
            </div>
            <div class="row">
                <div class="well carousel-search">
                    <div class="row">
                        <div class="col-sm-12 text-center">
                            <h4 class="text-transform-none">Descargar Copia de Documentación</h4>
                        </div>
                    </div>
                    <!-- Buttons -->
                    <div class="row" style="align-content:center">
                        <br>
                        <div class="col-sm-4">
                            <button type="submit" id="btnDetalle" class="btn btn-primary btn-block">Detalle de Pagos</button>
                            <br>
                        </div>
                        @*<div class="col-sm-3">
                            <button type="submit" id="btnAnual" class="btn btn-primary btn-block">Resumen Anual</button>
                            <br>
                        </div>*@
                        <div class="col-sm-4">
                            <button type="submit" id="btnCobertura" class="btn btn-primary btn-block">Certificado de Cobertura</button>
                            <br>
                        </div>
                        <div class="col-sm-4">
                            <button type="submit" id="btnClausula" class="btn btn-primary btn-block">Cláusula No Repeticion</button>
                            <br>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"> <span aria-hidden="true">&times;</span> </button>
                        <h4 class="modal-title" id="myModalLabel">Error</h4>
                    </div>
                    <div class="modal-body"> No se ha seleccionado ninguna póliza.</div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                    </div>
                </div>
            </div>
        </div>
        <!-- Modal -->
        @Html.Partial("Modal/_PaymentDetailsReport")
        @Html.Partial("Modal/_NonRepetitionClouseReport")




