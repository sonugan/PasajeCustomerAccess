@model CustomerAccess.Model.Policies.Policies

<script src="~/Scripts/Views/_InformationPolicy.js"></script>

<div class="panel panel-default">
    <div role="button" class="panel-heading panel-prud" data-toggle="collapse" data-parent="#accordion" href="#collapsePol" aria-expanded="false" aria-controls="collapsePol" id="headingOne">
        <span class="panel-title panel-collapsed">
            <a class="titulo-panel">
                Póliza Nro @Model.PolicyNumber
            </a><i id="iconPol" class="indicator glyphicon glyphicon-chevron-up pull-right" data-toggle="collapse" data-parent="#accordion" href="#collapsePol" aria-expanded="false" aria-controls="collapsePol"></i>
        </span>
    </div>
    <div id="collapsePol" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
        <div class="panel-body">
            <div class="row">
                <div class="col-sm-6">
                    <table id="datos1" class="table table-striped footable dt-responsive" data-page-size="20" cellspacing="0">
                        <thead>
                            <tr>
                                <th data-sort-ignore="true"></th>
                                <th data-sort-ignore="true"></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Tomador</td>
                                <td>@Model.Clients.FullName</td>
                            </tr>
                            <tr>
                                <td>Asegurado</td>
                                <td>@Model.InsuredClient.FullName</td>
                            </tr>
                            <tr>
                                <td>Estado</td>
                                <td>@Model.StatusPol</td>
                            </tr>
                            <tr>
                                <td>Vigencia</td>
                                <td>@Model.StartDate.Value.ToString("dd/MM/yyyy")</td>
                            </tr>
                            <tr>
                                <td>Vencimiento de póliza</td>
                                <td>@Model.EndDate.AsDateTime().ToString("dd/MM/yyyy")</td>
                            </tr>
                            <tr>
                                <td>Último Estado</td>
                                @{
                                    if (string.IsNullOrEmpty(Model.LastChangeDate.ToString()))
                                    {
                                        <td>N/A</td>
                                    }
                                    else
                                    {
                                        <td>@Model.LastChangeDate.Value.ToString("dd/MM/yyyy")</td>
                                    }
                                }
                            </tr>
                            <tr>
                                <td>Frecuencia</td>
                                <td>@Model.BillMode</td>
                            </tr>
                            <tr>
                                <td>Moneda</td>
                                <td>@Model.Currency</td>
                            </tr>
                            <tr>
                                <td>Medio de Pago</td>
                                <td> <a href="#" data-toggle="modal" data-target="#myModal" class="underline"> @Model.PaymentMethod</a> </td>
                            </tr>
                            <tr>
                                <td>Autopago de primas desde los Fondos Acumulados</td>
                                @{
                                    if (Model.AutomaticPayment == null || Model.AutomaticPayment == "N")
                                    {
                                        <td>No</td>
                                    }
                                    else
                                    {
                                        <td>Si</td>
                                    }
                                }
                            </tr>
                            <tr>
                                <td> <b>Monto Total de la Cobertura *</b> </td>
                                @{
                                    if (Model.SumInsured == null)
                                    {
                                        <td>@Model.Currency 0,00</td>
                                    }
                                    else
                                    {
                                        <td><b>@Model.Currency @String.Format("{0:#,##0}", @Model.SumInsured)</b></td>
                                    }
                                }

                            </tr>
                        </tbody>
                    </table>
                    <label> <small> * No incluye el monto de cobertura de Cláusulas Adicionales opcionales. </small></label>
                    <br>
                    <br>
                </div>
                @if (ViewBag.Active == "1")
                {
                <div class="col-sm-6">
                    <table id="datos2" class="table table-striped footable dt-responsive" cellspacing="0">
                        <thead>
                            <tr>
                                <th data-sort-ignore="true"></th>
                                <th data-sort-ignore="true"></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Subtotal Prima</td>
                                @{
                                    if (Model.Premium == null)
                                    {
                                        <td style="text-align:right">@Model.Currency 0,00</td>
                                    }
                                    else
                                    {
                                        <td style="text-align:right">@Model.Currency @String.Format("{0:#,##0.00}", @Model.Premium)</td>
                                    }
                                }

                            </tr>
                            <tr>
                                <td>Aportes Adicionales</td>
