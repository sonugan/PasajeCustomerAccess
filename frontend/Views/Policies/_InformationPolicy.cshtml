                                        <td style="text-align:right">@Model.Currency 0,00</td>
                                    }
                                    else
                                    {
                                        <td style="text-align:right">@Model.Currency @String.Format("{0:#,##0.00}", @Model.SSNTax)</td>
                                    }
                                }

                            </tr>
                            <tr>
                                <td>Impuestos IIBB</td>
                                @{
                                    if (Model.IIBBTax == null)
                                    {
                                        <td style="text-align:right">@Model.Currency 0,00</td>
                                    }
                                    else
                                    {
                                        <td style="text-align:right">@Model.Currency @String.Format("{0:#,##0.00}", @Model.IIBBTax)</td>
                                    }
                                }

                            </tr>
                            <tr>
                                <td>IVA</td>
                                @{
                                    if (!Model.IVA.HasValue)
                                    {
                                        <td style="text-align:right">@Model.Currency 0,00</td>
                                    }
                                    else
                                    {
                                        <td style="text-align:right">@Model.Currency @String.Format("{0:#,##0.00}", @Model.IVA.Value)</td>
                                    }
                                }

                            </tr>
                            <tr>
                                <td>Gastos Administrativos</td>
                                @{
                                    if (Model.PolicyFee == null)
                                    {
                                        <td style="text-align:right">@Model.Currency 0,00</td>
                                    }
                                    else
                                    {
                                        <td style="text-align:right">@Model.Currency @String.Format("{0:#,##0.00}", @Model.PolicyFee)</td>
                                    }
                                }

                            </tr>
                            <tr>
                                <td> <b>Prima Total</b> </td>
                                @{
                                    if (Model.PremiumTot == null)
                                    {
                                        <td style="text-align:right">@Model.Currency 0,00</td>
                                    }
                                    else
                                    {
                                        <td style="text-align:right"><b>@Model.Currency @String.Format("{0:#,##0.00}", @Model.PremiumTot)</b></td>
                                    }
                                }

                            </tr>
                        </tbody>
                    </table>
                    <label> <small>En caso de que adeudes el pago de una prima, por favor comunicate con tu asesor Life Planner® o con Atención al asegurado. </small></label>
                </div>
                }
