<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    @Scripts.Render("~/bundles/modernizr")
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,700,800,600,300' rel='stylesheet' type='text/css'>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/footable/footable.core.min.css" rel="stylesheet" />
    <link href="~/Content/styles.css" rel="stylesheet">
    <link href="~/Content/datepicker.css" rel="stylesheet">
    <link href="~/Content/prudential.css" rel="stylesheet">
    <link href="~/Content/bootstrap-select.min.css" rel="stylesheet" />
	<!-- Adobe Analytics -->
	<script type="text/javascript" src="//nexus.ensighten.com/prudential/production-intl-argentina/Bootstrap.js"></script>
	
    <!-- jQuery -->
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap-datepicker.js"></script>
    <script src="~/Scripts/footable/footable.js"></script>
    <script src="~/Scripts/footable/footable.sort.js" type="text/javascript"></script>
    <script src="~/Scripts/footable/footable.filter.js" type="text/javascript"></script>
    <script src="~/Scripts/footable/footable.paginate.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.table2excel.js" type="text/javascript"></script>
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/smart-table.js"></script>
    <script src="~/Scripts/linq.js"></script>
    <script src="~/Scripts/Site.js" type="text/javascript"></script>
    <script src="~/Scripts/bootbox.min.js"></script>
    <script src="~/Scripts/bootstrap-select.min.js"></script>
</head>
<body>
    <label id="urlHome" class="hidden">@ViewBag.homerUrl.ToString()</label>
    @{if (ViewBag.userName != null)
        {
            <label id="ClientId" class="hidden">@ViewBag.userName.ToString()</label>

     } }
    <div class="master">
        <nav class="navbar navbar-inverse navbar-static-top">
            <div class="container-fluid">

                @*Solo mostrar el boton del menu para mobile cuando el usuario esta logeado.*@
                @if (Session["user"] != null && !string.IsNullOrEmpty(Session["user"].ToString()))
                {
                    <div id="navbarHeader" class="navbar-header" data-toggle="popover">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar3"> <span class="sr-only">Toggle navigation</span> <span class="icon-bar"></span> <span class="icon-bar"></span> <span class="icon-bar"></span> </button>
                        <!-- Cambiar direccion a login -->
                        <a class="navbar-brand" href='@Url.Action("Policies", "Policies", null)'><img src="~/Content/img/logo.png" alt="Prudential"> </a>
                    </div>
                }
                else
                {
                    <div id="navbarHeader" class="navbar-header">
                        <a class="navbar-brand" href='@Url.Action("Policies", "Policies", null)'><img src="~/Content/img/logo.png" alt="Prudential"> </a>
                    </div>
                }

                @Html.Partial("_LoginPartial")
                <!--/.nav-collapse -->

            </div>
            <!--/.container-fluid -->
        </nav>
        <div class="container">
            <div class="row">
                <div class="col-sm-12 text-right">
                    <label>
                        Atención al asegurado:
                        <br>
                        <a href="@Url.Action("GetContact", "Contact", "Contact")"> <span class="glyphicon glyphicon-earphone"></span> 0-800-777-PRUD(7783)</a>
						<a href="https://beprudential.gointegro.com/auth/signin" target="_blank">
                        <img src="~/Content/img/BePrudential.gif" class="img-responsive img-rounded" alt="BePrudential">
						</a>
                    </label>
                </div>
            </div>
        </div>

    </div>
    <div class="container body-content" ng-app="myApp" id="bodyPage">
        @RenderBody()

    </div>
    <div style="padding-left:2em">
        <label>
            <small>
                *S.E.U.O
            </small>
        </label>
    </div>
    <footer>

        <div id="footer">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 text-center">
                        <p class="texto-blanco">
                            <a href='@Url.Action("Policies", "Policies", null)' style="color:white">Inicio</a> | <a href="@Url.Action("GetContact", "Contact", "Contact")" style="color:white">Contacto</a> | <a href="@Url.Action("TermAndCond", "Home")" style="color:white">Términos y Condiciones</a>
                            <br />
                            <br />Prudential Seguros S.A. Av. Leandro N. Alem 855 5° Piso (1001) Buenos Aires, Argentina.
                            <br /> Tel: 5411-4891-5000 Dirección General de Defensa y Protección al Consumidor.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    @RenderSection("scripts", required: false)
    <script src="~/Scripts/jquery.mask.js"></script>
    <script src="~/Scripts/Views/_layout.js"></script>
</body>
</html>
