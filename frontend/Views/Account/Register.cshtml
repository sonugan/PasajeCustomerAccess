@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model CustomerAccess.Model.Account.Users

@{
    ViewBag.Title = "Register";
}

<div class="container">
    <div class="login-form">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="row text-center">
                    <section id="loginForm">
                        <div class="col-xs-12">
                            @using (Html.BeginForm("Register", "Account", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()

                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                <div class="form-group">
                                    <div class="row">
                                        @Html.LabelFor(m => m.DocType, new { @class = "col-xs-9 control-label text-left" })
                                        <div class="col-xs-12">
                                            @Html.DropDownListFor(model => model.DocType, (IEnumerable<SelectListItem>)ViewBag.ListTypeDoc, "Seleccionar", new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.DocType, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        @Html.LabelFor(m => m.DocNumber, new { @class = "col-xs-9 control-label text-left" })
                                        <div class="col-xs-12">
                                            @Html.TextBoxFor(m => m.DocNumber, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.DocNumber, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        @Html.LabelFor(m => m.Sex, new { @class = "col-xs-9 control-label text-left" })
                                        <div class="col-xs-12">
                                            @Html.DropDownListFor(model => model.Sex, (IEnumerable<SelectListItem>)ViewBag.ListTypeSex, "Seleccionar",  new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Sex, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        @Html.LabelFor(m => m.Email, new { @class = "col-xs-9 control-label text-left" })
                                        <div class="col-xs-12">
                                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        @Html.LabelFor(m => m.Policy, new { @class = "col-xs-9 control-label text-left" })
                                        <div class="col-xs-12">
                                            @Html.TextBoxFor(m => m.Policy, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Policy, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        @Html.LabelFor(m => m.User, new { @class = "col-xs-9 control-label text-left" })
                                        <div class="col-xs-12">
                                            @Html.TextBoxFor(m => m.User, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.User, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-10 col-sm-offset-1">
                                    <input type="submit" class="btn btn-primary btn-block" value="Registro" />
                                </div>
                            }

                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>