@using CustomerAccess.Model.Account
@model UserImpersonates
@{
    ViewBag.Title = "Ingresar como";
}
<script src="~/Scripts/Views/policies.js" type="text/javascript"></script>
<div class="container">
    <div class="login-form">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="row">
                    <section id="loginForm">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="form-group">
                                <div class="row">
                                    @Html.LabelFor(m => m.PolicyNumber, new { @class = "col-sm-9 control-label" })
                                    <div class="col-md-12">
                                        @Html.TextBoxFor(m => m.PolicyNumber, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.PolicyNumber, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="row">
                                    @Html.LabelFor(m => m.TypeDoc, new { @class = "col-sm-9 control-label" })
                                    <div class="col-sm-5">
                                        @Html.DropDownListFor(m => m.TypeDoc, ViewBag.DocTypeList as IEnumerable<SelectListItem>, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.TypeDoc, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="row">
                                    @Html.LabelFor(m => m.DocNumber, new { @class = "col-sm-9 control-label" })
                                    <div class="col-sm-12">
                                        @Html.TextBoxFor(m => m.DocNumber, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.DocNumber, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="row">
                                    @Html.LabelFor(m => m.Sex, new { @class = "col-sm-9 control-label" })
                                    <div class="col-sm-8">
                                        @Html.DropDownListFor(m => m.Sex, ViewBag.SexTypeList as IEnumerable<SelectListItem>, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.Sex, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <button type="button" name="ingresar" id="btnValidateCustomer" class="btn btn-primary btn-block">Ingresar</button>
                        
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}