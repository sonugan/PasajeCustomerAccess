@model CustomerAccess.Model.Account.Users

@{
    ViewBag.Title = "Ingresar";
}

<div class="container">
    <div class="login-form">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="row">
                    <section id="loginForm">
                        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = "~/Policies/Policies" }, FormMethod.Post, new { role = "login" }))
                        {
                            @Html.AntiForgeryToken()

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                <div class="row">

                                    @Html.LabelFor(m => m.User, new { @class = "col-md-9 control-label" })
                                    <div class="col-md-12">
                                        @Html.TextBoxFor(m => m.User, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.User, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    @Html.LabelFor(m => m.Password, new { @class = "col-md-9 control-label" })
                                    <div class="col-sm-12">
                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            
                            @*@Html.CheckBoxFor(m => m.RememberMe)
                                @Html.LabelFor(m => m.RememberMe)*@
                            
                            <button type="submit" name="ingresar" class="btn btn-primary btn-block">Ingresar</button>
                            <button type="button" name="nuevoCliente" class="btn btn-primary btn-block"  onclick="window.location.href='@Url.Action("Register","Account", null)';">¿Nuevo Cliente?</button>

                        }

                    </section>
                </div>
            </div>
            <div class="panel-footer"> <a href="#">¿Olvidaste tu Contraseña?</a> </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}