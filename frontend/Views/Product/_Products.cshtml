@model ICollection<CustomerAccess.Model.Products.Products>
<script src="~/Scripts/Views/products.js"></script>


<div class="panel panel-default">
    <div role="button" class="panel-heading panel-prud" data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="false" aria-controls="collapseOne" id="headingOne">
        <span class="panel-title">
            <i id="iconProd" class="indicator glyphicon glyphicon-chevron-down pull-right" data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="false" aria-controls="collapseOne"></i>
            <a class="titulo-panel">Productos</a>
        </span>
    </div>
    <div id="collapseOne" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">
        <div class="panel-body">
            <div class="col-sm-12 col-md-3 pull-left margen-columna">
                <table class="table-condensed footable margen-tabla">
                    <tbody>
                        <tr>
                            <td>
                                <label class="margen-label-mostrar">Mostrar</label>
                            </td>
                            <td>
                                <div class="form-group margen-formgroup">
                                    <select class="pointer" id="change-page-size1">
                                        <option value="10" selected="selected">10</option>
                                        <option value="25">25</option>
                                        <option value="50">50</option>
                                        <option value="100">100</option>
                                    </select>
                                </div>
                            </td>
                            <td>
                                <label class="margen-label-registros">registros</label>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="col-sm-12 col-md-3 pull-right">
                <input id="filter1" class="form-control" placeholder="Buscar" type="text" />
            </div>
            <table id="tblProductos" class=" table table-striped footable dt-responsive toggle-circle" data-filter-text-only="true" data-filter="#filter1" data-page-navigation=".pagination" cellspacing="0">
                <thead>
                    <tr>
                        <th>Producto</th>
                        <th data-hide="tablet, phone">Monto Cobertura</th>
                        <th data-hide="tablet, phone" class="vertical-align">Prima</th>
                        <th data-type="numeric" data-sort-initial="ascending" data-hide="phone" class="vertical-align">Vigencia</th>
                        <th>Estado</th>
                        <th data-hide="tablet, phone" class="vertical-align">Cambio de Estado</th>
                        <th data-type="numeric" data-hide="tablet, phone" class="vertical-align">Extraprima Plana</th>
                        <th data-hide="tablet, phone" class="vertical-align">Clase Extraprima</th>
                        <th data-hide="phone">Tasa garantizada</th>
                        <th data-hide="DiaryRent">Renta temporaria</th>
                        <th data-toggle="true" data-sort-ignore="true"></th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        if (Model == null || Model.Count == 0)
                        {
                            <tr>
                                <td colspan="7" class="text-center">No existe información a mostrar</td>
                            </tr>
                        }
                        else
                        {
                            foreach (var item in Model)
                            {
                                <tr class="text-center">
                                    <td class="text-center">@item.Product</td>
                                    @{
                                        if (@item.SumInsured != null)
                                        {
                                            if (@item.SumInsured != -1)
                                            {
                                                <td class="text-center">@item.Currency @String.Format("{0:#,##0.00}", @item.SumInsured)</td>
                                            }
                                            else
                                            {
                                                <td class="text-center"></td>
                                            }
                                        }
                                        else
                                        {
                                            <td>@item.Currency 0,00</td>
                                        }
                                    }


                                    @{
                                        if (@item.Premium != null)
                                        {
                                            if (@item.Premium != -1)
                                            {
                                            <td class="text-center col-xs-2">@item.Currency @String.Format("{0:#,##0.00}", @item.Premium)</td>
                                            }
                                            else
                                            {
                                                <td class="text-center"></td>
                                            }
                                        }
                                        else
                                        {
                                            <td>@item.Currency 0,00</td>
                                        }
                                    }

                                    @{
                                        if (@item.StartDate != null)
                                        {
                                            <td data-value="@item.StartDate.Value.ToString("yyyyMMdd")" class="text-center">@Html.DisplayFor(modelItem => item.StartDate)</td>
                                        }
                                        else
                                        {
                                            <td>N/A</td>
                                        }
                                    }

                                    @{
                                        if (@item.StatusProd != null)
                                        {
                                            <td class="text-center">@Html.DisplayFor(modelItem => item.StatusProd)</td>
                                        }
                                        else
                                        {
                                            <td>N/A</td>
                                        }
                                    }

                                    @{
                                        if (@item.StatusDate != null)
                                        {
                                            <td data-value="@item.StatusDate.Value.ToString("yyyyMMdd")" class="text-center">@Html.DisplayFor(modelItem => item.StatusDate)</td>
                                        }
                                        else
                                        {
                                            <td>N/A</td>
                                        }
                                    }

                                    @if (item.ExtraPremium != null)
                                    {
                                        if (@item.ExtraPremium != -1)
                                        {
                                            <td class="text-center">@item.Currency @String.Format("{0:#,##0.00}", @item.ExtraPremium)</td>
                                        }
                                        else
                                        {
                                            <td class="text-center"></td>
                                        }
                                    }
                                    else
                                    {
                                        <td>@item.Currency 0,00</td>
                                    }
                                    @if (string.IsNullOrWhiteSpace(item.PremiumCode))
                                    {
                                        <td>N/A</td>

                                    }
                                    else
                                    {
                                        <td class="text-center">@Html.DisplayFor(modelItem => item.PremiumCode)</td>
                                    }
                                    @if (item.GuranteedRate != null)
                                    {
                                        <td class="text-center">@Html.DisplayFor(modelItem => item.GuranteedRate)%</td>
                                    }
                                    else
                                    {
                                        <td>0%</td>
                                    }
                                    @if (item.DiaryRent != null)
                                    {
                                        <td>@Html.DisplayFor(modelItem => item.DiaryRent.RemainingDays)</td>
                                    }

                                    <td class="text-center"></td>
                                </tr>
                                            }
                                        }
                    }
                </tbody>
                <tfoot>
                    <tr class="noExl text-center">
                        <td colspan="10" class="text-center">
                            <ul class="pagination pagination-centered hide-if-no-paging"></ul>
                        </td>
                    </tr>
                </tfoot>
            </table>
            <label> <small> * Si has realizado aportes adicionales y querés conocer el saldo acumulado, consultá a tu Life Planner o llamá a Atención al Asegurado. </small></label>
            <table id="tblProductosHidden" class="hidden">
                <thead>
                    <tr>
                        <th>Producto</th>
                        <th>Monto Cobertura</th>
                        <th>Prima</th>
                        <th>Vigencia</th>
                        <th>Estado</th>
                        <th>Cambio de Estado</th>
                        <th>Extraprima Plana</th>
                        <th>Clase Extraprima</th>
                        <th>Tasa garantizada</th>
                        <th>Renta temporaria</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Product</td>
                                @{
                                    if (@item.SumInsured != null)
                                    {
                                        if (@item.SumInsured != -1)
                                        {
                                            <td class="text-center">@item.Currency @String.Format("{0:#,##0.00}", @item.SumInsured)</td>
                                        }
                                        else
                                        {
                                            <td class="text-center"></td>
                                        }
                                    }
                                    else
                                    {
                                        <td>@item.Currency 0,00</td>
                                    }
                                }


                                @{
                                    if (@item.Premium != null)
                                    {
                                        if (@item.Premium != -1)
                                        {
                                            <td class="text-center col-xs-2">@item.Currency @String.Format("{0:#,##0.00}", @item.Premium)</td>
                                        }
                                        else
                                        {
                                            <td class="text-center"></td>
                                        }
                                    }
                                    else
                                    {
                                        <td>@item.Currency 0,00</td>
                                    }
                                }

                                @{
                                    if (@item.StartDate != null)
                                    {
                                        <td data-value="@item.StartDate.Value.ToString("yyyyMMdd")" class="text-center">@Html.DisplayFor(modelItem => item.StartDate)</td>
                                    }
                                    else
                                    {
                                        <td>N/A</td>
                                    }
                                }

                                @{
                                    if (@item.StatusProd != null)
                                    {
                                        <td>@Html.DisplayFor(modelItem => item.StatusProd)</td>
                                    }
                                    else
                                    {
                                        <td>N/A</td>
                                    }
                                }

                                @{
                                    if (@item.StatusDate != null)
                                    {
                                        <td data-value="@item.StatusDate.Value.ToString("yyyyMMdd")" class="text-center">@Html.DisplayFor(modelItem => item.StatusDate)</td>
                                    }
                                    else
                                    {
                                        <td>N/A</td>
                                    }
                                }

                                @if (item.ExtraPremium != null)
                                {
                                    if (@item.ExtraPremium != -1)
                                    {
                                        <td class="text-center">@item.Currency @String.Format("{0:#,##0.00}", @item.ExtraPremium)</td>
                                    }
                                    else
                                    {
                                        <td class="text-center"></td>
                                    }
                                }
                                else
                                {
                                    <td>@item.Currency 0,00</td>
                                }
                                @if (string.IsNullOrWhiteSpace(item.PremiumCode))
                                {
                                    <td>N/A</td>

                                }
                                else
                                {
                                    <td>@Html.DisplayFor(modelItem => item.PremiumCode)</td>
                                }
                                @if (item.GuranteedRate != null)
                                {
                                    <td>@Html.DisplayFor(modelItem => item.GuranteedRate)%</td>
                                }
                                else
                                {
                                    <td>0%</td>
                                }
                                @if (item.DiaryRent != null)
                                {
                                    <td>@Html.DisplayFor(modelItem => item.DiaryRent.RemainingDays)</td>
                                }
                            </tr>
                                    }

                    }
                </tbody>    
            </table>

            <br />
            <div class="boton-excel">
                <button type="button" class="btn btn-primary btn-block" id="BtnExportProducts">Excel</button>
            </div>

        </div>
    </div>
</div>
